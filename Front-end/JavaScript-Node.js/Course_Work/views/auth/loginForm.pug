extends ../_shared/_master
block body
    div#reg-form
        form(action='/auth/sign-in', method="POST")
            input.form-control(type="text" name="username" placeholder="Enter username")
            input.form-control(type="password" name="password" placeholder="Enter password")
            button.btn.btn-success#btn-signin
                | Sign In
        form(action='/auth/sign-up', method='get')
            button.btn.btn-primary#btn-register
                | Register
